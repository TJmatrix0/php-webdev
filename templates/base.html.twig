<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container border-bottom border-white" name="navbar">
            <nav class="navbar navbar-expand-sm">
                <div class="container-fluid">
                    <ul class="navbar-nav">
                        <li class="nav-item me-2">
                            <a class="nav-link" href="{{ path("app_homepage") }}"><i class="fa-solid fa-house fa-lg"></i></a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-white" href="{{ path("app_about")  }}">About</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link text-white" href="{{ path("app_giveaways") }}">Giveaways</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path("app_login") }}">Login</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        {% block content %}{% endblock %}
        <div class="container" name="footer">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <p class="col-md-4 mb-0 text-white">&copy; 2023 Justin Fernandez</p>

                <ul class="nav col-md-4 justify-content-end">
                    <li class="nav-item"><a href="{{ path("app_homepage") }}" class="nav-link px-2 text-white">Home</a></li>
                    <li class="nav-item"><a href="{{ path("app_about") }}" class="nav-link px-2 text-white">About</a></li>
                    <li class="nav-item"><a href="{{ path("app_giveaways") }}" class="nav-link px-2 text-white">Giveaways</a></li>
                    <li class="nav-item"><a href="{{ path("app_login") }}" class="nav-link px-2 text-white">Login</a></li>
                    <li class="nav-item"><a href="https://github.com/TJmatrix0/php-webdev" class="nav-link px-2 text-white" target="_blank">Github <i class="fa-brands fa-github"></i></a></li>
                </ul>
            </footer>
        </div>
    </body>
</html>
